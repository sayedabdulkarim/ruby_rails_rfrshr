<%= form_with(model: @document, local: true) do |form| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@document.errors.count, "error" ) %> prohibited this document from being saved:
      </h2>

      <ul>
        <% @document.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <%= form.label :name, class: 'mb-2' %>
              <%= form.text_field :name, class: 'form-control form-control-lg rounded-0' %>
                <% document.errors.full_messages_for(:name).each do |message| %>
                  <p class="text-danger">
                    <%= message %>
                  </p>
                  <% end %>
          </div>

          <div class="form-group">
            <%= form.label :doc_type, class: 'mb-2' %>
              <%= form.select :doc_type, Document::DOC_TYPES, { prompt: 'Select Document Type' },
                class: 'form-control form-control-lg rounded-0' %>
                <% document.errors.full_messages_for(:doc_type).each do |message| %>
                  <p class="text-danger">
                    <%= message %>
                  </p>
                  <% end %>
          </div>

          <div class="form-group">
            <%= form.label :employee_id, class: 'mb-2' %>

              <%= form.select :employee_id, Employee.all.collect { |e| ["#{e.first_name} (ID: #{e.id})", e.id] }, {
                prompt: 'Select Employee' }, class: 'form-control form-control-lg rounded-0' %>
                <% document.errors.full_messages_for(:employee_id).each do |message| %>
                  <p class="text-danger">
                    <%= message %>
                  </p>
                  <% end %>
          </div>

          <div class="form-group">
            <%= form.label :image, class: 'mb-2' %>
              <%= form.file_field :image, class: 'form-control form-control-lg rounded-0' %>
                <% document.errors.full_messages_for(:image).each do |message| %>
                  <p class="text-danger">
                    <%= message %>
                  </p>
                  <% end %>
          </div>

          <div class="form-group">
            <%= form.submit 'Create Document' , class: 'btn btn-primary btn-lg rounded-0' %>
          </div>
        </div>

        <% end %>